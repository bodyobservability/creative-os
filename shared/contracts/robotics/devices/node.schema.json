{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "creative-os.local/contracts/robotics/devices/node.schema.json",
  "title": "Robotics Node",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "kind",
    "role",
    "platform",
    "capabilities"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "Stable node identifier (kebab-case)."
    },
    "kind": {
      "type": "string",
      "enum": ["node"],
      "description": "Always 'node' for now; reserved for future expansion."
    },
    "role": {
      "type": "string",
      "enum": ["perception", "planning", "control", "sensing", "actuation", "gateway", "logging"],
      "description": "Primary role for this node."
    },
    "platform": {
      "type": "string",
      "enum": ["jetson", "raspberry-pi", "esp32", "other"],
      "description": "Hardware platform class."
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:\.[a-z0-9]+)*$"
      },
      "description": "Declared node capabilities (dot-delimited)."
    },
    "address": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "host": { "type": "string" },
        "ip": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "serial": { "type": "string" },
        "bus": { "type": "string" }
      },
      "description": "Optional addressing info."
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Freeform tags for grouping or search."
    },
    "notes": {
      "type": "string",
      "description": "Optional human notes."
    }
  }
}
