{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "creative-os.local/contracts/robotics/safety/gate.schema.json",
  "title": "Safety Gate",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "description",
    "state",
    "requirements"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "Gate identifier."
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "state": {
      "type": "string",
      "enum": ["armed", "disarmed", "tripped"],
      "description": "Current gate state."
    },
    "requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "value"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["telemetry", "operator_ack", "interlock", "environment"],
            "description": "Requirement category."
          },
          "value": {
            "type": "string",
            "description": "Requirement detail (declarative)."
          }
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
