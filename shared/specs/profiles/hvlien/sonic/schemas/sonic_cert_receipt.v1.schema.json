{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://creative-os.local/profiles/hvlien/specs/sonic/schemas/sonic_cert_receipt.v1.schema.json",
  "title": "HVLIEN Sonic Certification Receipt v1",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "rack_id",
    "profile_id",
    "macro",
    "status",
    "artifacts",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "rack_id": {
      "type": "string"
    },
    "profile_id": {
      "type": "string"
    },
    "macro": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "warn"
      ]
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "baseline": {
          "type": "string"
        },
        "current_sweep": {
          "type": "string"
        },
        "diff": {
          "type": "string"
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}