{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HVLIEN Station State Report v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "status",
    "confidence",
    "station_state",
    "signals",
    "evidence",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "warn",
        "fail"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "station_state": {
      "type": "string",
      "enum": [
        "idle",
        "editing",
        "exporting",
        "performing",
        "blocked",
        "unknown"
      ]
    },
    "active_app": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "required": [
        "bundle_id",
        "name"
      ],
      "properties": {
        "bundle_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "ableton": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "required": [
        "detected"
      ],
      "properties": {
        "detected": {
          "type": "boolean"
        },
        "version": {
          "type": [
            "string",
            "null"
          ]
        },
        "frontmost": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "set_title": {
          "type": [
            "string",
            "null"
          ]
        },
        "set_path_hint": {
          "type": [
            "string",
            "null"
          ]
        },
        "transport": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": false,
          "properties": {
            "playing": {
              "type": [
                "boolean",
                "null"
              ]
            },
            "recording": {
              "type": [
                "boolean",
                "null"
              ]
            }
          }
        },
        "ui": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": false,
          "properties": {
            "modal_detected": {
              "type": [
                "boolean",
                "null"
              ]
            },
            "save_sheet_detected": {
              "type": [
                "boolean",
                "null"
              ]
            }
          }
        }
      }
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "value",
          "weight",
          "contribution"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "value": {
            "type": [
              "string",
              "number",
              "boolean",
              "null"
            ]
          },
          "weight": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "contribution": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "state_votes",
              "confidence_delta"
            ],
            "properties": {
              "state_votes": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "idle": {
                    "type": "number"
                  },
                  "editing": {
                    "type": "number"
                  },
                  "exporting": {
                    "type": "number"
                  },
                  "performing": {
                    "type": "number"
                  },
                  "blocked": {
                    "type": "number"
                  },
                  "unknown": {
                    "type": "number"
                  }
                }
              },
              "confidence_delta": {
                "type": "number",
                "minimum": -1,
                "maximum": 1
              }
            }
          }
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "last_run_dir": {
          "type": [
            "string",
            "null"
          ]
        },
        "latest_ready_report": {
          "type": [
            "string",
            "null"
          ]
        },
        "latest_drift_report": {
          "type": [
            "string",
            "null"
          ]
        },
        "latest_export_receipt": {
          "type": [
            "string",
            "null"
          ]
        },
        "latest_repair_receipt": {
          "type": [
            "string",
            "null"
          ]
        },
        "screenshot_path": {
          "type": [
            "string",
            "null"
          ]
        },
        "ocr_dump_path": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
