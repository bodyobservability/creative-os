{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio-operator.local/profiles/hvlien/specs/index/drift_fix_receipt.v1.schema.json",
  "title": "HVLIEN Drift Fix Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "status",
    "plan",
    "steps",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "warn",
        "aborted"
      ]
    },
    "plan": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "command",
          "exit_code"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "exit_code": {
            "type": "integer"
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}