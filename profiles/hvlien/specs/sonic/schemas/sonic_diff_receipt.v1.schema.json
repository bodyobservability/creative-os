{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio-operator.local/profiles/hvlien/specs/sonic/schemas/sonic_diff_receipt.v1.schema.json",
  "title": "HVLIEN Sonic Diff Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "baseline",
    "current",
    "status",
    "deltas",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "baseline": {
      "type": "string"
    },
    "current": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "warn",
        "fail"
      ]
    },
    "deltas": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "worst_true_peak_db",
        "worst_rms_db",
        "worst_dc_offset_abs",
        "min_stereo_corr",
        "safe_max_position_delta"
      ],
      "properties": {
        "worst_true_peak_db": {
          "type": "number"
        },
        "worst_rms_db": {
          "type": "number"
        },
        "worst_dc_offset_abs": {
          "type": "number"
        },
        "min_stereo_corr": {
          "type": [
            "number",
            "null"
          ]
        },
        "safe_max_position_delta": {
          "type": "number"
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}