{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://creative-os.local/profiles/hvlien/specs/sonic/schemas/sonic_sweep_receipt.v1.schema.json",
  "title": "HVLIEN Sonic Sweep Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "macro",
    "positions",
    "status",
    "summary",
    "samples"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "macro": {
      "type": "string"
    },
    "profile_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "rack_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "positions": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "warn"
      ]
    },
    "thresholds": {
      "type": "object",
      "additionalProperties": true
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "worst_true_peak_dbfs",
        "worst_rms_dbfs",
        "worst_dc_offset_abs",
        "min_stereo_correlation",
        "suggested_safe_max_position"
      ],
      "properties": {
        "worst_true_peak_dbfs": {
          "type": "number"
        },
        "worst_rms_dbfs": {
          "type": "number"
        },
        "worst_dc_offset_abs": {
          "type": "number"
        },
        "min_stereo_correlation": {
          "type": [
            "number",
            "null"
          ]
        },
        "suggested_safe_max_position": {
          "type": "number"
        }
      }
    },
    "samples": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "position",
          "input_audio",
          "metrics",
          "status",
          "reasons"
        ],
        "properties": {
          "position": {
            "type": "number"
          },
          "input_audio": {
            "type": "string"
          },
          "metrics": {
            "type": "object"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "warn"
            ]
          },
          "reasons": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}