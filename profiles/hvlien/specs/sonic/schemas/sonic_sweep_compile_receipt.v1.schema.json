{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://creative-os.local/profiles/hvlien/specs/sonic/schemas/sonic_sweep_compile_receipt.v1.schema.json",
  "title": "HVLIEN Sonic Sweep Compile Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "macro",
    "positions",
    "status",
    "artifacts",
    "steps",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "macro": {
      "type": "string"
    },
    "positions": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2
    },
    "rack_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "profile_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "midi": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "cc",
        "channel",
        "port_name_contains"
      ],
      "properties": {
        "cc": {
          "type": "integer",
          "minimum": 0,
          "maximum": 127
        },
        "channel": {
          "type": "integer",
          "minimum": 1,
          "maximum": 16
        },
        "port_name_contains": {
          "type": "string"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "export_dir",
        "sweep_receipt"
      ],
      "properties": {
        "export_dir": {
          "type": "string"
        },
        "sweep_receipt": {
          "type": "string"
        },
        "run_dir": {
          "type": "string"
        }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "detail",
          "exit_code"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "detail": {
            "type": "string"
          },
          "exit_code": {
            "type": "integer"
          }
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}