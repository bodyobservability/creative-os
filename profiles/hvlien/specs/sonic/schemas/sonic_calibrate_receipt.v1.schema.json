{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio-operator.local/profiles/hvlien/specs/sonic/schemas/sonic_calibrate_receipt.v1.schema.json",
  "title": "HVLIEN Sonic Calibrate Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "macro",
    "positions",
    "status",
    "artifacts",
    "steps",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "macro": {
      "type": "string"
    },
    "positions": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2
    },
    "profile_in": {
      "type": "string"
    },
    "profile_out": {
      "type": "string"
    },
    "rack_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "profile_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "export_dir",
        "sweep_receipt",
        "tune_receipt",
        "run_dir"
      ],
      "properties": {
        "export_dir": {
          "type": "string"
        },
        "sweep_receipt": {
          "type": "string"
        },
        "tune_receipt": {
          "type": "string"
        },
        "run_dir": {
          "type": "string"
        }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "command",
          "exit_code"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "exit_code": {
            "type": "integer"
          }
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}