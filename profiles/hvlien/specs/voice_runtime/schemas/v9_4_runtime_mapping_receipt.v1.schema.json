{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio-operator.local/profiles/hvlien/specs/voice_runtime/schemas/v9_4_runtime_mapping_receipt.v1.schema.json",
  "title": "HVLIEN v9.4 Runtime Mapping Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "mapping_spec",
    "status",
    "checks",
    "artifacts",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "mapping_spec": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "warn"
      ]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "status",
          "details"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "warn",
              "skip"
            ]
          },
          "details": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": true
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}