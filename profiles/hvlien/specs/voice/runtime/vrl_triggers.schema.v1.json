{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HVLIEN Voice Runtime Trigger Spec",
  "type": "object",
  "required": [
    "schema_version",
    "layer",
    "midi_bus",
    "triggers"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [
        1
      ]
    },
    "layer": {
      "type": "string",
      "enum": ["vrl"]
    },
    "midi_bus": {
      "type": "string"
    },
    "triggers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "phrase",
          "action",
          "target",
          "intent"
        ],
        "properties": {
          "phrase": {
            "type": "string"
          },
          "action": {
            "type": "object",
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "midi_cc",
                  "midi_note"
                ]
              },
              "cc": {
                "type": "integer",
                "minimum": 0,
                "maximum": 127
              },
              "note": {
                "type": "integer",
                "minimum": 0,
                "maximum": 127
              },
              "value": {
                "type": "integer",
                "minimum": 0,
                "maximum": 127
              },
              "velocity": {
                "type": "integer",
                "minimum": 1,
                "maximum": 127
              }
            }
          },
          "target": {
            "type": "object",
            "properties": {
              "macro": {
                "type": "string"
              },
              "device": {
                "type": "string"
              },
              "clip": {
                "type": "string"
              },
              "track": {
                "type": "string"
              },
              "scene": {
                "type": "string"
              },
              "transport": {
                "type": "string"
              }
            }
          },
          "intent": {
            "type": "string"
          }
        }
      }
    }
  }
}
