{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio-operator.local/profiles/hvlien/specs/library/schemas/rack_pack_manifest.v1.schema.json",
  "title": "HVLIEN Rack Pack Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "name",
    "applies_to",
    "racks"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "name": {
      "type": "string"
    },
    "applies_to": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "os",
        "ableton"
      ],
      "properties": {
        "os": {
          "type": "string"
        },
        "ableton": {
          "type": "string"
        }
      }
    },
    "racks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Rack"
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "$defs": {
    "Req": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "name",
        "optional"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "plugin",
            "device",
            "pack"
          ]
        },
        "name": {
          "type": "string"
        },
        "format": {
          "type": [
            "string",
            "null"
          ]
        },
        "vendor": {
          "type": [
            "string",
            "null"
          ]
        },
        "optional": {
          "type": "boolean"
        }
      }
    },
    "Check": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "region",
        "tokens",
        "min_conf"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ocr_contains_all",
            "ocr_contains_any"
          ]
        },
        "region": {
          "type": "string"
        },
        "tokens": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "min_conf": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "Verification": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "regions",
        "checks"
      ],
      "properties": {
        "regions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "checks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Check"
          }
        }
      }
    },
    "Rack": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rack_id",
        "display_name",
        "type",
        "profile_binding",
        "macro_abi",
        "macro_names",
        "requires",
        "verification"
      ],
      "properties": {
        "rack_id": {
          "type": "string"
        },
        "display_name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "instrument_rack",
            "audio_rack",
            "midi_rack"
          ]
        },
        "profile_binding": {
          "type": "string"
        },
        "target_track": {
          "type": [
            "string",
            "null"
          ],
          "description": "Optional explicit target track name; if absent, infer from expected_tokens."
        },
        "expected_tokens": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "macro_abi": {
          "type": "string"
        },
        "macro_names": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 8,
          "maxItems": 8
        },
        "requires": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Req"
          }
        },
        "verification": {
          "$ref": "#/$defs/Verification"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}