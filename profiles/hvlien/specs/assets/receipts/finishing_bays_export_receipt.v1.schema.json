{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HVLIEN Finishing Bays Export Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "job",
    "status",
    "items",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "job": {
      "type": "string",
      "const": "finishing_bays_export"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "warn"
      ]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "bay_id",
          "name",
          "target_path",
          "result"
        ],
        "properties": {
          "bay_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "target_path": {
            "type": "string"
          },
          "bytes": {
            "type": [
              "integer",
              "null"
            ]
          },
          "result": {
            "type": "string",
            "enum": [
              "exported",
              "skipped",
              "failed"
            ]
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}