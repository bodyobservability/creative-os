{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hvlien.audio/specs/library/governance/profile_promotion_receipt.v1.schema.json",
  "title": "HVLIEN Profile Promotion Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "profile_in",
    "profile_out",
    "status",
    "gates",
    "reasons"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "profile_in": {
      "type": "string"
    },
    "profile_out": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "gates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "command",
          "exit_code"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "exit_code": {
            "type": "integer"
          }
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}