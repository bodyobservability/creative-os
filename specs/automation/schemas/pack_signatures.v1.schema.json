{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio-operator.local/specs/automation/schemas/pack_signatures.v1.schema.json",
  "title": "Studio Pack Signatures v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "name",
    "applies_to",
    "packs"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "applies_to": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "os",
        "ableton"
      ],
      "properties": {
        "os": {
          "type": "string",
          "enum": [
            "macos"
          ]
        },
        "ableton": {
          "type": "string"
        }
      }
    },
    "packs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/PackSignature"
      }
    },
    "meta": {
      "type": "object"
    }
  },
  "$defs": {
    "PackSignature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pack_id",
        "pack_name",
        "signature_tokens",
        "min_hits",
        "confidence_threshold",
        "install_prompt"
      ],
      "properties": {
        "pack_id": {
          "type": "string",
          "pattern": "^[a-z0-9_\\-\\.]+$"
        },
        "pack_name": {
          "type": "string",
          "minLength": 1
        },
        "included_with": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "implied_by_tags_any": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "implied_by_tags_all": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "signature_tokens": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/SignatureToken"
          }
        },
        "min_hits": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "confidence_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "install_prompt": {
          "$ref": "#/$defs/InstallPrompt"
        }
      }
    },
    "SignatureToken": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "query",
        "expect_contains"
      ],
      "properties": {
        "query": {
          "type": "string",
          "minLength": 1
        },
        "expect_contains": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "InstallPrompt": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title",
        "message"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "message": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}