{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HVLIEN Wizard Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "status",
    "steps",
    "anchors_pack",
    "notes"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "warn",
        "fail",
        "aborted"
      ]
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "command",
          "decision"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "exit_code": {
            "type": [
              "integer",
              "null"
            ]
          },
          "decision": {
            "type": "string",
            "enum": [
              "yes",
              "no",
              "skip",
              "auto"
            ]
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "anchors_pack": {
      "type": [
        "string",
        "null"
      ]
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}