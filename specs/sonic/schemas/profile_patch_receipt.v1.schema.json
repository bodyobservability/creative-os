{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hvlien.audio/specs/sonic/schemas/profile_patch_receipt.v1.schema.json",
  "title": "HVLIEN Profile Patch Receipt v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "profile_in",
    "tuned_in",
    "status",
    "patch_path",
    "changes"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "run_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "profile_in": {
      "type": "string"
    },
    "tuned_in": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "warn"
      ]
    },
    "patch_path": {
      "type": "string"
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "before",
          "after"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "before": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "after": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          }
        }
      }
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}